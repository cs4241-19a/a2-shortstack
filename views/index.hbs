<div class="row m-0">
    <div class="col p-0">
        <div class="d-flex text-white bg-info mb-0 p-4">
            <h1 class="m-0 h3 bd-highlight"><a href="/" class="text-white">The Forums</a></h1>
        </div>

        <table class="table table-striped table-bordered table-responsive-sm">
            <thead class="thead-light">
            <tr id="home-headers">
                <th scope="col" class="w-25">Topic</th>
                <th scope="col" class="created-col">Created</th>
                <th scope="col">Statistics</th>
                <th scope="col">Last post</th>
            </tr>
            </thead>
            <tbody>
            {{#each this.forumData as |entry|}}
                <tr>
                    <td>
                        <h3 class="h6"><a href="/forum/{{forumId}}">{{entry.title}}</a></h3>
                        <div class="small">{{entry.shortDesc}}</div>
                    </td>
                    <td>
                        <div title="{{ entry.created.name }}">{{entry.created.username}}</div>
                        <div>{{entry.created.date}}</div>
                    </td>
                    <td>
                        <div>{{entry.stats.replies}} replies</div>
                        <div>{{entry.stats.views}} views</div>
                    </td>
                    <td>
                        <div title="{{ entry.lastPost.name }}">{{entry.lastPost.username}}</div>
                        <div>{{entry.lastPost.date}}</div>
                    </td>
                </tr>
            {{/each}}
            <tr class="table-add-row">
                <td colspan="4">
                    <button class="btn btn-info d-block" data-toggle="modal" data-target="#addThreadFormModal">Start a new Forum</button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

{{#> layouts/modal-layout type="addThread" title="Add a Message" submitText="Post Message" }}
    {{#*inline "form-content"}}
        {{> includes/add-thread-form }}
    {{/inline}}
{{/layouts/modal-layout}}
